{
  "name": "prest-lib",
  "version": "1.2.5",
  "description": "pREST TypeScript library and tools for rapid web development",
  "keywords": [
    "pREST",
    "javascript",
    "typescript",
    "jsonml",
    "dom",
    "encode",
    "events",
    "form",
    "hash",
    "history",
    "http",
    "load",
    "router",
    "signal",
    "template",
    "validators",
    "widgets"
  ],
  "license": "GPL-3.0",
  "author": {
    "name": "Peter Rybar",
    "email": "pr.rybar@gmail.com",
    "url": "http://prest-tech.appspot.com/peter-rybar"
  },
  "homepage": "https://gitlab.com/peter-rybar/prest-lib",
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/peter-rybar/prest-lib.git"
  },
  "bugs": {
    "url": "https://gitlab.com/peter-rybar/prest-lib/issues"
  },
  "private": false,
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "typescript": {
    "main": "src/index.ts"
  },
  "scripts": {
    "prepare": "npm run dist",
    "prepublishOnly": "npm test",
    "preversion": "npm run test",
    "postversion": "git push && git push --tags",
    "clean": "rm -rf build; rm -rf dist; cd tools; npm run clean",
    "clean:all": "npm run clean; rm -rf node_modules; cd tools; npm run clean:all",
    "tslint": "tslint --project tsconfig.json",
    "build": "webpack --mode production",
    "build:watch": "webpack --mode development --watch",
    "demo": "npm run build:watch",
    "dist": "rm -rf dist; tsc --declaration --outDir dist",
    "test:jasmine": "ts-node node_modules/jasmine/bin/jasmine 'test/**/*.test.ts'",
    "test:jasmine:watch": "nodemon --ext ts --watch test --watch src --exec 'ts-node node_modules/jasmine/bin/jasmine \"test/**/*.test.ts\"'",
    "test": "npm run tslint; npm run test:jasmine; npm run build",
    "test:watch": "npm run test:jasmine:watch",
    "start": "npm run demo"
  },
  "devDependencies": {
    "@types/incremental-dom": "^0.5.0",
    "@types/jasmine": "^3.4.0",
    "@types/numeral": "0.0.22",
    "awesome-typescript-loader": "^5.2.1",
    "glob": "^7.1.4",
    "incremental-dom": "^0.6.0",
    "jasmine": "^3.4.0",
    "moment": "^2.24.0",
    "nodemon": "^1.19.1",
    "numeral": "^2.0.6",
    "pre-commit": "^1.2.2",
    "pre-push": "^0.1.1",
    "ts-node": "^7.0.1",
    "tslint": "^5.18.0",
    "typescript": "^3.5.3",
    "webpack": "^4.39.1",
    "webpack-cli": "^3.3.6"
  },
  "pre-commit": [
    "test",
    "dist"
  ],
  "pre-push": [],
  "prettier": {
    "tabWidth": 4,
    "printWidth": 80,
    "overrides": [
      {
        "files": "package.json",
        "options": {
          "tabWidth": 2
        }
      },
      {
        "files": "*.yaml",
        "options": {
          "tabWidth": 2
        }
      }
    ]
  },
  "files": [
    "dist/**/*",
    "src/**/*"
  ]
}
