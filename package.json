{
  "name": "prest-lib",
  "version": "0.1.0",
  "description": "pREST TypeScript library and tools for rapid web development",
  "keywords": [
    "pREST",
    "javascript",
    "typescript",
    "jsonml",
    "dom",
    "encode",
    "events",
    "form",
    "hash",
    "history",
    "http",
    "load",
    "router",
    "signal",
    "template",
    "widgets"
  ],
  "author": {
    "name": "Peter Rybar",
    "email": "pr.rybar@gmail.com",
    "url": "http://prest-tech.appspot.com/peter-rybar"
  },
  "private": false,
  "license": "GPL-3.0",
  "main": "./dist/umd/prest.js",
  "typescript": {
    "main": "./src/main/index.ts"
  },
  "scripts": {
    "postinstall": "cd tools; npm install",
    "clean": "rm -rf build; rm -rf dist; cd tools; npm run clean",
    "clean:all": "npm run clean; rm -rf node_modules; cd tools; npm run clean:all",
    "tslint": "tslint --project tsconfig.json",
    "dev": "webpack --mode development --watch",
    "build": "webpack --mode production",
    "pretest": "npm run build",
    "test": "./node_modules/karma-cli/bin/karma start ./karma.conf.js --single-run",
    "test:watch": "./node_modules/karma-cli/bin/karma start ./karma.conf.js",
    "start": "npm run dev"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/peter-rybar/prest-lib.git"
  },
  "pre-commit": [
    "build"
  ],
  "pre-push": [],
  "dependencies": {},
  "devDependencies": {
    "@types/assertion-error": "^1.1.0",
    "@types/chai": "^3.4.34",
    "@types/incremental-dom": "^0.5.0",
    "@types/mocha": "^2.2.48",
    "@types/numeral": "0.0.22",
    "@types/stats": "^0.16.30",
    "chai": "^3.5.0",
    "glob": "^7.1.3",
    "incremental-dom": "^0.6.0",
    "karma": "^1.3.0",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^1.0.1",
    "karma-cli": "^1.0.1",
    "karma-mocha": "^1.3.0",
    "karma-phantomjs-launcher": "^1.0.2",
    "karma-requirejs": "^1.1.0",
    "mocha": "^3.1.2",
    "moment": "^2.22.0",
    "numeral": "^2.0.6",
    "pre-commit": "^1.2.2",
    "pre-push": "^0.1.1",
    "ts-loader": "^5.3.2",
    "ts-node": "^7.0.1",
    "tslint": "^5.9.1",
    "typescript": "^3.2.2",
    "webpack": "^4.28.2",
    "webpack-cli": "^3.1.2"
  },
  "prettier": {
    "tabWidth": 4,
    "printWidth": 80,
    "overrides": [
      {
        "files": "package.json",
        "options": {
          "tabWidth": 2
        }
      },
      {
        "files": "*.yaml",
        "options": {
          "tabWidth": 2
        }
      }
    ]
  }
}
