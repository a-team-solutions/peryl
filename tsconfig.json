{
    "compilerOptions": {
        "target": "es5",
        "module": "umd",
        "noImplicitAny": false,
        "noImplicitReturns": false,
        "declaration": true,
        "sourceMap": true,
        "inlineSourceMap": false,
        "removeComments": true,
        "outDir": "build"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "build"
    ]
}
