{
    "compilerOptions": {
        "target": "es5",
        "lib": [
            "dom",
            "es2015",
            "es2017.object",
            "es2016.array.include"
        ],
        "module": "umd",
        "noImplicitAny": false,
        "noImplicitReturns": false,
        "declaration": true,
        "sourceMap": true,
        "inlineSourceMap": false,
        "removeComments": true,
        "outDir": "build"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "build"
    ]
}
